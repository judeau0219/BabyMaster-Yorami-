<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/main_bg_color">
    
    <com.ndl.android.babymaster.view.PhotoView 
		android:id="@id/photo_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>
    
    <LinearLayout 
        android:layout_width="240dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:orientation="vertical"
        android:gravity="center_horizontal">
	    <TextView android:id="@id/txt_name_kor"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/txt_profile_name_kor"/>
	    <TextView android:id="@id/txt_name_eng"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/txt_profile_name_eng"/>
	    <ImageView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:src="@drawable/registration_line"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:text="출생일"
	        style="@style/txt_input_title"/>
	    <TextView android:id="@id/txt_birthday"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/txt_basic"/>
	    <ImageView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:src="@drawable/registration_line"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:text="성별"
	        style="@style/txt_input_title"/>
	    <TextView android:id="@id/txt_sex"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/txt_basic"/>
	    <ImageView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:src="@drawable/registration_line"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:text="키/몸무게"
	        style="@style/txt_input_title"/>
	    <TextView android:id="@id/txt_hweight"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			style="@style/txt_basic"/>
	    <Button android:id="@id/btn_registration"
	        android:layout_width="match_parent"
	        android:layout_height="50dip"
	        android:layout_marginTop="20dip"
	        android:onClick="onClick"
	        android:text="등록완료"
	        style="@style/btn_input_complete"/>
	    
    </LinearLayout>
    
</LinearLayout>
